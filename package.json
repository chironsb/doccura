    "ink-markdown": "^1.0.0",
    "ink-text-input": "^5.0.0",
    "ollama": "^0.5.0",
    "pdfjs-dist": "^5.4.394",
    "react": "^18.2.0",
    "sharp": "^0.34.5",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/uuid": "^9.0.7",
    "typescript": "^5.9.3"
  },
