{
  "name": "doccura",
  "version": "0.1.0",
  "description": "Doccura - Local RAG system with terminal interface",
  "module": "index.tsx",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun run index.tsx",
    "start": "bun run index.tsx",
